{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"strict": true,
		"useDefineForClassFields": false,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"noUncheckedIndexedAccess": true,
		"types": [
			"vite/client",
			"lit",
			"lit/decorators.js",
			"material-shell",
			"@vdegenne/subtitles"
		]
	},
	"include": ["./src/**/*.ts", "./dist/data/**/*.ts", "./types.d.ts"]
}
