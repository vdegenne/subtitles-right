	"devDependencies": {
		"@material/mwc-top-app-bar": "^0.27.0",
		"@material/web": "^2.4.1",
		"@snar/lit": "^1.8.1",
		"@tailwindcss/postcss": "^4.1.17",
		"@vdegenne/about-dialog": "^0.4.2",
		"@vdegenne/debouncer": "^1.0.9",
		"@vdegenne/forms": "^0.1.56",
		"@vdegenne/material-color-helpers": "^1.11.7",
		"@vdegenne/mini-gamepad": "^0.4.7",
		"@vdegenne/mini-rest": "^0.3.2",
		"@vdegenne/path": "^0.1.6",
		"@vdegenne/rollup-plugin-minify-html": "^1.0.6",
		"@vdegenne/router": "^0.1.7",
		"@vdegenne/subtitles": "file:../subtitles",
		"@vdegenne/youtube": "^0.1.7",
		"chalk": "^5.6.2",
		"custom-element-decorator": "^0.6.0",
		"html-vision": "^0.3.8",
		"lit": "^3.3.1",
		"lit-with-styles": "^2.1.3",
		"material-3-dialog": "^0.1.11",
		"material-3-prompt-dialog": "^1.0.5",
		"material-shell": "^1.3.7",
		"rollup-plugin-material-all": "^1.2.2",
		"rollup-plugin-minify-template-literals": "^1.1.7",
		"snar": "^2.3.7",
		"snar-save-to-local-storage": "^1.0.1",
		"tailwindcss": "^4.1.17",
		"toastit": "^2.2.2",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"vite-plugin-mdicon2svg": "^0.2.3",
		"vscode-ui-connector": "^0.2.4",
		"wavy-text-element": "file:../wavy-text-element",
		"wireit": "^0.14.12"
	},
	"bin": {
		"make-vtt": "./lib/make-vtt.js",
		"make-srt": "./lib/make-srt.js"
	},
	"scripts": {
		"dev": "wireit",
		"build": "wireit",
		"build:server": "wireit"
	},
	"wireit": {
		"dev": {
			"dependencies": [
				"dev:vite",
				"serve:server"
			]
		},
		"dev:vite": {
			"service": true,
			"command": "vite --host",
			"dependencies": [
				"vuc",
				"../router:build",
				"../wavy-text-element:build"
			]
		},
		"build": {
			"dependencies": [
				"build:vite"
			]
		},
		"build:vite": {
			"command": "vite build",
			"files": [
				"./vite.config.js",
				"./src",
				"./index.html",
				"./public"
			],
			"output": [
				"./dist/**/*",
				"!./dist/data/"
			]
		},
		"build:server": {
			"command": "tsc --pretty -p ./tsconfig.server.json",
			"clean": "if-file-deleted",
			"dependencies": [
				"../koa:build"
			],
			"files": [
				"./tsconfig.server.json",
				"./src/server/**/*.ts"
			],
			"output": [
				"./lib/"
			]
		},
		"serve:server": {
			"service": true,
			"command": "node ./lib/server.js",
			"dependencies": [
				"build:server"
			],
			"files": []
		},
		"vuc": {
			"service": true,
			"command": "vuc",
			"files": [
				"./.vuc.json"
			]
		}
	},
	"dependencies": {
		"@vdegenne/debug": "^0.1.30",
		"@vdegenne/koa": "file:../koa"
	}
}
